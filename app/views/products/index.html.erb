
<h1>Contas Pagas</h1>
<div id="products">
<input type="hidden" value="<%= i=0 %>">
  <% @products.each do |product| %>
    <div class="products_order">
      <p><%= render product %></p>
      </div>
  <% end %>
</div>
<p>Total Gasto: R$<strong><%= @array.sum %></strong></p>
<div class="icon-new">
</div>
<!-- Button-trigger-modal--->
<a class="icon_add mt-3" data-toggle="modal" data-target="#exampleModal">+</a><br/><br/>
<!-- Modal-->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Criar novo Produto</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render "form", product: @Newproduct %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>