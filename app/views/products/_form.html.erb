<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.text_field :name,class:"form-control new" %>
  </div>

  <div class="form-group">
    <%= form.text_area :descr,class:"form-control new" %>
  </div>

  <div class="form-group">
    <%= form.number_field :price,class:"form-control new" %>
  </div>
  <div class="form-group">
    <%= form.submit "Enviar",class:"btn btn-success sub" %>
  </div>
<% end %>
