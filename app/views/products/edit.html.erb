<h1>Edite o produto</h1>

<%= render "form", product: @product %>

<br>
<div class="btn-group btns">
<!-- Button trigger modal -->
<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
  Excluir Produto
</button>
  <%= link_to "Voltar para lista de contas", products_path, class:"btn btn-primary ml-3" %>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
      <h5 class="modal-title">Produto prestes a ser Excluido</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Tem certeza que deseja excluir esse produto?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= button_to "Confirmar", @product, method: :delete, class:"btn btn-danger" %>
      </div>
    </div>
  </div>
</div>